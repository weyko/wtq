<resources>
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 水平方向线条-->
    <style name="a_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/bg_line</item>
    </style>
    <!-- 垂直方向线条-->
    <style name="a_line_v">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg_line</item>
    </style>
    <!-- 标题中间的文字 -->
    <style name="titleText">
        <item name="android:textSize">@dimen/text_size_top</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>
    <!-- 正文的文字 -->
    <style name="contentText">
        <item name="android:textSize">@dimen/text_size_cont</item>
        <item name="android:textColor">@color/text_color_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="chat_progress">
        <item name="android:indeterminateDrawable">@drawable/progress_larg</item>
        <item name="android:minWidth">76dip</item>
        <item name="android:maxWidth">76dip</item>
        <item name="android:minHeight">76dip</item>
        <item name="android:maxHeight">76dip</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>
    <!-- 聊天时间样式 -->
    <style name="chat_time_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="BaseDialog" parent="@android:style/Theme.Dialog" />
    <style name="Theme.Light.FullScreenDialogAct" parent="@style/BaseDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    <!-- 标题按钮 titleButton -->
    <style name="titleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/personal_text_padding</item>
        <item name="android:paddingRight">@dimen/personal_text_padding</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- 标题右侧的按钮 RightButton -->
    <style name="rightButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingLeft">@dimen/personal_text_padding</item>
        <item name="android:paddingRight">@dimen/personal_text_padding</item>
        <item name="android:background">@color/tm</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="titleRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <!-- 字母索引 -->
    <style name="letterIndex">
        <item name="android:textSize">@dimen/text_size_toast</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/bg_color</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="toast_subsideBar">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#70000000</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_height">65dp</item>
    </style>
    <!-- 浮动菜单栏 -->
    <style name="menu_text">
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textSize">@dimen/text_size_toast</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- 查看图片 -->
    <style name="showPhoto_tv">
        <item name="android:textSize">@dimen/text_size_cont</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/personal_checkbox_padding</item>
    </style>
    <style name="topbarTittleTheme">
        <item name="android:textColor">@color/selector_topbar_btn_text_color</item>
    </style>
    <style name="Personal_Ly">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/LoyPadding</item>
        <item name="android:paddingTop">@dimen/LoyPadding</item>
        <item name="android:weightSum">4</item>
    </style>
    <style name="setting_onoff">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/setting_on_off</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:checked">true</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
    </style>
    <!-- 设置 -->
    <style name="setting_header">
        <item name="android:layout_marginLeft">@dimen/editText_padding</item>
        <item name="android:paddingLeft">@dimen/personal_text_padding</item>
        <item name="android:textColor">@color/text_color_title</item>
        <item name="android:textSize">@dimen/text_size_title_btn</item>
        <item name="android:paddingBottom">@dimen/LoyPadding</item>
        <item name="android:paddingTop">@dimen/LoyPadding</item>
    </style>
    <style name="setting_right">
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/text_color_mark</item>
        <item name="android:textSize">@dimen/text_size_toast</item>
    </style>
    <style name="search_hint">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/text_color_mark</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 注册页面输入框样式 -->
    <style name="Register_EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/editText_padding</item>
        <item name="android:paddingBottom">@dimen/editText_padding</item>
        <item name="android:paddingRight">@dimen/editText_padding</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColorHint">@color/text_color_no_click</item>
        <item name="android:textColor">@color/text_color_title</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="horizontal_light_thin_divider">
        <item name="android:layout_height">2px</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/color_gray_d9d9d9</item>
    </style>
    <style name="dialog_title_text_style">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/color_activity_blue_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/dialog_padding_vertical</item>
    </style>
    <style name="dialog_default_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/tm</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="dialog_full_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/tm</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="custom_dialog_message_text_style">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/color_black_333333</item>
        <item name="android:paddingLeft">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/custom_dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/custom_dialog_padding_vertical</item>
        <item name="android:background">@drawable/im_list_item_selector</item>
    </style>
    <style name="radion_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_cont</item>
        <item name="android:drawablePadding">@dimen/radion_drawable_padding</item>
        <item name="android:padding">@dimen/radion_padding</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="style_share_area_chekbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:button">@drawable/selector_share_checkbox</item>
        <item name="android:checked">false</item>
        <item name="android:enabled">false</item>
    </style>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>
    <!-- 魔聊tabbtn_left -->
    <style name="Button4" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/bg_btn_chat</item>
        <item name="android:background">@drawable/bg_button_4</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/chat_btn_padding1</item>
        <item name="android:paddingRight">@dimen/chat_btn_padding1</item>
        <item name="android:paddingTop">@dimen/chat_btn_padding2</item>
        <item name="android:paddingBottom">@dimen/chat_btn_padding2</item>
        <item name="android:textSize">@dimen/text_size_cont</item>
    </style>

    <!-- 魔聊tabbtn_right -->
    <style name="Button5" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/bg_btn_chat</item>
        <item name="android:background">@drawable/bg_button_5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/chat_btn_padding1</item>
        <item name="android:paddingRight">@dimen/chat_btn_padding1</item>
        <item name="android:paddingTop">@dimen/chat_btn_padding2</item>
        <item name="android:paddingBottom">@dimen/chat_btn_padding2</item>
        <item name="android:textSize">@dimen/text_size_cont</item>
        <item name="android:button">@null</item>
    </style>
</resources>
