<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/recording_hint_bg"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp" >

    <ImageView
        android:id="@+id/ivDiscountCouponIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:src="@drawable/record_ontooshoot" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivDiscountCouponIcon"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:text="@string/chat_record_to_short"
        android:textColor="@color/white" />

</RelativeLayout>