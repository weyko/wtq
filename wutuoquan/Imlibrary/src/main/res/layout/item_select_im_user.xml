<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/letterIndex"
        style="@style/letterIndex"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/friends_page_list_item_paddingLeft"
        android:textColor="#b3b3b3" />

    <ImageView
        android:id="@+id/img_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/bg_line"
        android:contentDescription="@string/ok" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/friends_list_item_avatar_padding"
        android:paddingLeft="@dimen/friends_page_list_item_paddingLeft"
        android:paddingRight="@dimen/friends_page_list_sider_width"
        android:paddingTop="@dimen/friends_list_item_avatar_padding" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/friends_list_item_avatar_width"
            android:layout_height="@dimen/friends_list_item_avatar_width"
            android:contentDescription="@string/ok"
            android:scaleType="fitXY"
            android:src="@drawable/default_head" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:padding="@dimen/friends_page_list_item_paddingLeft"
            android:singleLine="true"
            android:textSize="@dimen/text_size_cont"
            android:textColor="@color/bg_phonecode_text_select" />

        <ImageView
            android:id="@+id/selected"
            android:layout_width="@dimen/friends_list_item_avatar_width"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ok"
            android:scaleType="center"
            android:src="@drawable/selector_checkbox_normal"
            android:visibility="invisible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_line_bottom"
        style="@style/a_line"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_line_left"
        style="@style/a_line"
        android:layout_marginLeft="70dp"
        android:visibility="gone" />

</LinearLayout>