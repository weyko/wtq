<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitem_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/avatar_item_newfriend"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/default_head" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name_item_newfriend"
            style="@style/titleText" />

        <TextView
            android:id="@+id/age_item_newfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginRight="10dip"
            android:background="@drawable/shape_male_bg"
            android:drawableLeft="@drawable/ic_friend_female"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_toast" />

        <TextView
            android:id="@+id/msg_item_newfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_mark"
            android:textSize="@dimen/text_size_title_btn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/time_item_newfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:textColor="@color/text_color_no_click" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/state_item_newfriend"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:background="@drawable/add_contacts_friend_invite"
            android:gravity="center"
            android:text="@string/follow_focus"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_toast"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>