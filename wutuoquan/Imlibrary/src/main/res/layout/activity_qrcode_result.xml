<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <include
        android:id="@+id/titleLoy"
        layout="@layout/layout_title" >
    </include>

    <TextView
        android:id="@+id/qr_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/qr_result_bg_color"
        android:padding="20dip"
        android:textColor="@color/text_color_mark"
        android:textSize="@dimen/text_size_cont" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/qr_result"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:textColor="@color/qr_result_tip_color"
        android:textSize="@dimen/text_size_cont" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/qr_result_close"
            android:layout_width="@dimen/qrcode_result_button_width"
            android:layout_height="@dimen/qrcode_result_button_height"
            android:background="@color/main_color"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_cont" />

        <TextView
            android:id="@+id/qr_result_open"
            android:layout_width="@dimen/qrcode_result_button_width"
            android:layout_height="@dimen/qrcode_result_button_height"
            android:layout_marginLeft="20dip"
            android:background="@color/main_color"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_cont" />
    </LinearLayout>

</RelativeLayout>