<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView style="@style/a_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/contain_select_members"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/count_select_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/chat_group_search_selected"
            android:textSize="@dimen/text_size_mark" />

        <TextView
            android:id="@+id/ok_select_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/text_color_no_click"
            android:clickable="true"
            android:layout_marginRight="8dp"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="5dp"
            android:enabled="false"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_toast" />
    </LinearLayout>

</LinearLayout>