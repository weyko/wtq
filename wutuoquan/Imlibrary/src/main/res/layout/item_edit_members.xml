<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="4dp">

    <ImageView
        android:id="@+id/select_item_edit_members"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_checkbox_nor" />

    <ImageView
        android:id="@+id/avatar_item_edit_memebers"
        android:layout_width="@dimen/friends_list_item_avatar_width"
        android:layout_height="@dimen/friends_list_item_avatar_width"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:contentDescription="@string/ok"
        android:scaleType="centerCrop"
        android:src="@drawable/default_head" />

    <TextView
        android:id="@+id/name_item_edit_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/text_color_title"
        android:textSize="@dimen/text_size_title_btn" />
</LinearLayout>