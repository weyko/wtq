<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listitem_selector"
        android:onClick="onClick"
        android:tag="qrcode"
        android:padding="10dp">

        <ImageView
            android:id="@+id/icon_qrcode_add_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_code_small" />

        <TextView
            android:id="@+id/title_qrcode_add_friends"
            style="@style/contentText"
            android:layout_toRightOf="@+id/icon_qrcode_add_friends"
            android:text="扫一扫" />

        <TextView
            android:id="@+id/hint_qrcode_add_friends"
            style="@style/contentText"
            android:layout_alignLeft="@+id/title_qrcode_add_friends"
            android:layout_below="@+id/title_qrcode_add_friends"
            android:text="扫描二维码添加好友"
            android:textColor="@color/text_color_mark" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/btn_gray_arrowright" />
    </RelativeLayout>
    <ImageView
         style="@style/a_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listitem_selector"
        android:onClick="onClick"
        android:tag="add"
        android:padding="10dp">

        <ImageView
            android:id="@+id/icon_add_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_code_small" />

        <TextView
            android:id="@+id/title_add_friends"
            style="@style/contentText"
            android:layout_toRightOf="@+id/icon_add_friends"
            android:text="添加" />

        <TextView
            android:id="@+id/hint_add_friends"
            style="@style/contentText"
            android:layout_alignLeft="@+id/title_add_friends"
            android:layout_below="@+id/title_add_friends"
            android:text="通过微信、短信、QQ邀请好友"
            android:textColor="@color/text_color_mark" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/btn_gray_arrowright" />
    </RelativeLayout>
    <ImageView
        style="@style/a_line"/>
</LinearLayout>