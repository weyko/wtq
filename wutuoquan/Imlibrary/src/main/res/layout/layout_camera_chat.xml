<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tm"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <sz.itguy.wxlikevideo.views.CameraPreviewView
            android:id="@+id/camera_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/progress_camera_chat"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/camera_chat"
            android:visibility="invisible"
            android:background="@color/color_green_camerma" />

        <TextView
            android:id="@+id/hint_camera_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/camera_chat"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:text="@string/hint_double_click"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_cont" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_camera_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <TextView
            android:id="@+id/record_camera_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/chat_camera_record"
            android:textColor="@color/color_green_camerma"
            android:textSize="28dp" />

        <ImageView
            android:id="@+id/more_camera_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_more" />
    </RelativeLayout>
</LinearLayout>