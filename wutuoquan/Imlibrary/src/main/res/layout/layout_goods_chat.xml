<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/remark_goods_chat"
        style="@style/titleText"
        android:textSize="@dimen/text_size_title"
        android:gravity="center_vertical|left"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/line_goods_chat"
        style="@style/a_line"
        android:layout_below="@+id/remark_goods_chat"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo_goods_chat"
            android:layout_width="75dp"
            android:layout_height="85dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_goods_chat"
                style="@style/titleText"
                android:layout_toRightOf="@+id/logo_goods_chat"
                android:maxLines="2"
                android:textSize="@dimen/text_size_cont" />

            <TextView
                android:id="@+id/price_goods_chat"
                style="@style/titleText"
                android:layout_below="@+id/title_goods_chat"
                android:layout_toRightOf="@+id/logo_goods_chat"
                android:textColor="@color/text_color_mark"
                android:gravity="top"
                android:paddingTop="5dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:textSize="@dimen/text_size_title_btn" />

            <TextView
                android:id="@+id/content_goods_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_goods_chat"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/logo_goods_chat"
                android:ellipsize="end"
                android:gravity="center_horizontal|left"
                android:maxLines="2"
                android:visibility="gone"
                android:textColor="@color/text_color_mark"
                android:textSize="@dimen/text_size_title_btn" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>