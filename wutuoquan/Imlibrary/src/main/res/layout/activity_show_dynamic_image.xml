<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/pb_load_local"
        style="@style/chat_progress"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <com.imtest.chat.view.HackyViewPager
        android:id="@+id/showphoto_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.imtest.chat.view.HackyViewPager>

    <ImageView
        android:id="@+id/selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/ok"
        android:onClick="onClick"
        android:padding="10dp"
        android:src="@drawable/selector_checkbox_checked" />
        <TextView
            android:id="@+id/cur_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_save"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="18dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/image_save"
            android:text="@string/save" />
</RelativeLayout>