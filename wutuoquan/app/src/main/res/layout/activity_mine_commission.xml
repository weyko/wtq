<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/zhuc_bg"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/mine_white"
                    android:textSize="@dimen/project_title"
                    android:layout_gravity="center_horizontal"
                    android:text="累计佣金（元）"/>
                <TextView
                    android:id="@+id/asset_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/mine_white"
                    android:textSize="@dimen/myasset_font"
                    android:layout_gravity="center_horizontal"
                    android:text="26666.66"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:background="@color/divider_color1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/vp_text1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/whole_style_color"
                    android:textSize="@dimen/project_title_font1"
                    android:text="佣金记录"/>
                <TextView
                    android:id="@+id/vp_text2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/actionbar_font_color"
                    android:textSize="@dimen/project_title_font1"
                    android:text="佣金规则"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal">
                <View
                    android:id="@+id/vp_line1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/whole_style_color"/>
                <View
                    android:id="@+id/vp_line2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/mine_white"/>
            </LinearLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/my_commsission_vp"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>