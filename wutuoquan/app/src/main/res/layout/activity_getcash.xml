<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--可用余额-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/detail_font"
                    android:textColor="@color/actionbar_font_color"
                    android:text="可用余额（元）"/>

                <TextView
                    android:id="@+id/cash_avail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/detail_font"
                    android:textColor="@color/actionbar_font_color"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="123.00"/>
            </RelativeLayout>
            <!--可提现金额-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/detail_font"
                    android:textColor="@color/actionbar_font_color"
                    android:text="可提现金额（元）"/>

                <TextView
                    android:id="@+id/cash_cashmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/detail_font"
                    android:textColor="@color/actionbar_font_color"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="123.00"/>
            </RelativeLayout>
            <!--提现至-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/detail_font"
                    android:textColor="@color/actionbar_font_color"
                    android:text="提现至"/>

                <TextView
                    android:id="@+id/cash_bank_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/detail_font"
                    android:textColor="@color/actionbar_font_color"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="中国农业银行"/>
            </RelativeLayout>
            <!--提现手续费-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/detail_font"
                    android:textColor="@color/actionbar_font_color"
                    android:text="提现手续费"/>

                <TextView
                    android:id="@+id/cash_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/detail_font"
                    android:textColor="@color/actionbar_font_color"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="123"/>
            </RelativeLayout>

            <!--输入提现金额-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/publish_edit_height"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_bg"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/cash_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:textSize="@dimen/publish_font_size"
                    android:hint="请输入提现金额"
                    android:text=""/>

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:padding="9dp"
                    android:text="元"/>
            </LinearLayout>
            <!--输入交易密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/publish_edit_height"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_bg"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/cash_pwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:textSize="@dimen/publish_font_size"
                    android:hint="请输入交易密码"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/whole_style_color"
                    android:text="忘记密码"/>
            </LinearLayout>

            <Button
                android:onClick="onGetCashClick"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:background="@color/whole_style_color"
                android:shadowColor="@color/app_background"
                android:text="确认"
                android:textColor="@color/mine_white"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>