<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="10dp"
              android:paddingTop="10dp"
              android:paddingLeft="10dp">

    <net.skjr.wtq.ui.widgets.RadiusImageView
        android:id="@+id/recommend_img"
        android:layout_width="115dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/chouzi_blank"/>

    <TextView
        android:id="@+id/recommend_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/actionbar_font_color"
        android:textSize="@dimen/project_title_font1"
        android:text="七天酒店联盟"/>

</LinearLayout>