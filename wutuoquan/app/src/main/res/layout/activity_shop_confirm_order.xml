<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/actionbar_font_color"
            android:textSize="@dimen/pay_type_size"
            android:text="合计"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/money_count"
            android:textSize="@dimen/pay_type_size"
            android:text="￥281.00"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/divider_color1"/>

    <!--微信支付-->
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:button="@null"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/checkbox_selector"
        android:textColor="@color/actionbar_font_color"
        android:textSize="@dimen/pay_type_size"
        android:text="微信支付"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color1"/>
    <!--连连支付-->
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:button="@null"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/checkbox_selector"
        android:textColor="@color/actionbar_font_color"
        android:textSize="@dimen/pay_type_size"
        android:text="连连支付"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color1"/>
    <!--余额支付-->
    <RelativeLayout
        android:id="@+id/pay_type3_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp">
        <TextView
            android:id="@+id/keyong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/actionbar_font_color"
            android:textSize="@dimen/pay_type_size"
            android:text="可用余额"/>

        <TextView
            android:id="@+id/buy_aval_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/keyong"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textColor="@color/money_count"
            android:textSize="@dimen/pay_type_size"
            android:text="8,000.00元"/>
        <CheckBox
            android:id="@+id/buy_pay_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/checkbox_selector"
            android:drawablePadding="10dp"/>

    </RelativeLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/wealth_list_shape2"
        android:shadowColor="@color/app_background"
        android:text="确认支付"
        android:textColor="@color/mine_white"
        android:textSize="18sp"/>

</LinearLayout>