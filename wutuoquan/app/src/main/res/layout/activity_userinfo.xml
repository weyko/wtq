<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:onClick="uploadHeadImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_font"
                android:textColor="@color/detail_font_lightcolor"
                android:layout_centerVertical="true"
                android:text="头像"/>
            <ImageView
                android:id="@+id/info_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/mine_head"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color_dark"/>

        <RelativeLayout
            android:onClick="updateNickName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_font"
                android:textColor="@color/detail_font_lightcolor"
                android:layout_centerVertical="true"
                android:text="昵称"/>
            <TextView
                android:id="@+id/info_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/detail_font"
                android:textColor="@color/actionbar_font_color"
                android:text=""/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color_dark"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_font"
                android:textColor="@color/detail_font_lightcolor"
                android:layout_centerVertical="true"
                android:text="二维码名片"/>
            <ImageView
                android:id="@+id/info_code_card"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/wd_icon_sys"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color_dark"/>

        <RelativeLayout
            android:onClick="onAddressClick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_font"
                android:textColor="@color/detail_font_lightcolor"
                android:layout_centerVertical="true"
                android:text="我的地址"/>
            <TextView
                android:id="@+id/info_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/detail_font"
                android:textColor="@color/actionbar_font_color"
                android:text=""/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/divider_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_font"
                android:textColor="@color/detail_font_lightcolor"
                android:layout_centerVertical="true"
                android:text="性别"/>
            <TextView
                android:id="@+id/info_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/detail_font"
                android:textColor="@color/actionbar_font_color"
                android:text=""/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color_dark"/>
        <RelativeLayout
            android:onClick="updateArea"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_font"
                android:textColor="@color/detail_font_lightcolor"
                android:layout_centerVertical="true"
                android:text="地区"
                android:id="@+id/textView"/>

            <TextView
                android:id="@+id/info_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_font"
                android:layout_centerVertical="true"
                android:textColor="@color/actionbar_font_color"
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color_dark"/>
        <RelativeLayout
            android:onClick="updateMood"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_font"
                android:textColor="@color/detail_font_lightcolor"
                android:layout_centerVertical="true"
                android:text="签名"/>
            <TextView
                android:id="@+id/info_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/detail_font"
                android:textColor="@color/actionbar_font_color"
                android:text=""/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/divider_color"/>



    </LinearLayout>

</LinearLayout>